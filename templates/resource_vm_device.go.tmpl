		return
	}}

	if resultMap, ok := result.(map[string]interface{{}}); ok {{
		if id, exists := resultMap["id"]; exists {{
			data.ID = types.StringValue(fmt.Sprintf("%v", id))
		}}
	}}
{lifecycle_code}
